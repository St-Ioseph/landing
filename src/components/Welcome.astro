---
import { WSP_NUMBER, WSP_MESSAGE } from "../constants";
import WspIcon from "./icons/WspIcon.astro";
import BtnLink from "./shared/BtnLink.astro";
const customersItems = [
  {
    testimonial:
      "Ioseph se convirtió rápidamente en una parte fundamental de nuestro equipo.",
    image:
      "https://www.domontconsulting.com/cdn/shop/t/52/assets/Paul_Marks_120x120_crop_center.jpg?v=32355245799948191471721367792",
  },
  {
    testimonial:
      "Los recomendaría ampliamente para cualquiera que busque valor y resultados.",
    image:
      "https://www.domontconsulting.com/cdn/shop/t/52/assets/Albeiro_Herrera_C_120x120_crop_center.jpg?v=141514832088668536931721367649",
  },
  {
    testimonial: "Tuvimos una excelente experiencia trabajando con Ioseph.",
    image:
      "https://www.domontconsulting.com/cdn/shop/t/52/assets/Venkat_Matoory_120x120_crop_center.jpg?v=104368223054884315561721367838",
  },
];
---

<section
  class="flex flex-col lg:flex-row items-center justify-center py-16 p-4 gap-8"
>
  <div class="flex flex-col items-start justify-start gap-6">
    <p class="font-sans font-medium text-accent">
      Empresa de desarrollo de software | Godoy Cruz, Mendoza, AR
    </p>
    <h1
      class="font-book tracking-tight text-4xl md:text-5xl xl:text-7xl font-normal max-w-3xl"
    >
      Su socio de confianza para aplicaciones web y sitios web
    </h1>
    <p class="prose text-lg md:text-xl xl:text-2xl">
      Software personalizado para acelerar el crecimiento, aumentar la
      participación de clientes e impulsar sus ingresos – todo diseñado
      exclusivamente para tu negocio.
    </p>
    <div
      class="flex flex-col justify-start items-end sm:items-start sm:flex-row gap-8 w-full"
    >
      <BtnLink
        Icon={WspIcon}
        target="_blank"
        href={`https://wa.me/${WSP_NUMBER}?text=${WSP_MESSAGE}`}
        text="Hablemos"
      />
      <a href="/services" class="btn">Descubre nuestros servicios</a>
    </div>
  </div>
  <div class="flex flex-col items-start justify-start gap-6">
    {
      customersItems.map(({ testimonial, image }, index) => (
        <article
          class={`flex ${index % 2 === 0 ? "flex-row text-start" : "flex-row-reverse text-end"} items-center border-2 border-base-content rounded-full p-1 bg-accent-content gap-2 sm:min-w-sm`}
        >
          <div class="avatar shrink-0">
            <div class="w-16 rounded-full p-0.5">
              <img src={image} class="rounded-full" />
            </div>
          </div>
          <div class="py-2 pr-4">
            <p class="prose text-sm leading-tight line-clamp-3 ">
              {testimonial}
            </p>
          </div>
        </article>
      ))
    }
  </div>
</section>
