---
import { WSP_MESSAGE, WSP_NUMBER } from "../constants";
import WspIcon from "./icons/WspIcon.astro";
import BtnLink from "./shared/BtnLink.astro";
const navbarItems = [
  { href: "/about", text: "Nosotros" },
  { href: "/contact", text: "Servicios" },
  // { href: "/case-studies", text: "Case Studies" },
  // { href: "/blog", text: "Blog" },
  { href: "/contact", text: "Contact" },
];
---

<section class="flex p-4 items-center justify-center">
  <div class="navbar bg-base-100 shadow-sm">
    <div class="flex-1">
      <a href="/" class="btn btn-ghost text-xl">Ioseph</a>
    </div>
    <!-- Desktop Navbar -->
    <div class="flex-none max-lg:hidden">
      <ul class="menu menu-horizontal px-1 gap-4 flex items-center">
        {
          navbarItems.map(({ href, text }) => (
            <li>
              <a href={href}>{text}</a>
            </li>
          ))
        }
        <li>
          <BtnLink
            Icon={WspIcon}
            target="_blank"
            href={`https://wa.me/${WSP_NUMBER}?text=${WSP_MESSAGE}`}
            text="Hablemos"
          />
        </li>
      </ul>
    </div>
    <!-- Mobile Navbar -->
    <div class="flex-none hidden max-lg:block">
      <details class="dropdown dropdown-end">
        <summary class="btn btn-square btn-ghost">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            class="inline-block h-5 w-5 stroke-current"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </summary>
        <ul
          class="menu dropdown-content bg-base-100 rounded-box z-1 w-52 p-2 shadow-sm"
        >
          {
            navbarItems.map(({ href, text }) => (
              <li>
                <a href={href}>{text}</a>
              </li>
            ))
          }
          <li>
            <BtnLink
              Icon={WspIcon}
              target="_blank"
              href={`https://wa.me/${WSP_NUMBER}?text=${WSP_MESSAGE}`}
              text="Hablemos"
            />
          </li>
        </ul>
      </details>
    </div>
  </div>
</section>
